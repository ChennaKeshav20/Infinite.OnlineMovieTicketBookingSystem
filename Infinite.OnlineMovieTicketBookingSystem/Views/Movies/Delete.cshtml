@model MovieViewModel 
@{
    ViewData["Title"] = "Delete";
} 
<h1>Delete - Movie Details</h1> 
<div class="row">
	<div class="col-md-5">
		<ul class="list-group">
			<li class="list-group-item"><b>Id :</b>@Model.Id</li>
			<li class="list-group-item"><b>Movie Name :</b> @Model.MovieName</li>
			<li class="list-group-item"><b>Production Name :</b>@Model.ProductionName</li>
			<li class="list-group-item"><b>Movie Description</b>@Model.MovieDescription</li>
			<li class="list-group-item"><b>Release Date :</b>@Model.ReleaseDate.ToShortDateString()</li>
			<li class="list-group-item"><b>Genre Id :</b>@Model.GenreGenreId</li>
			<li class="list-group-item"><b>Screen Id :</b>@Model.ScreenScreenId</li>
			<li class="list-group-item"><b>Show Id :</b>@Model.ShowShowId</li>
		</ul>
		<div>Are You Sure want to delete this movie?</div>
		<div>
			<form asp-controller="Movies" asp-action="Delete" method="post">
			<button type="submit" class="btn btn-danger">Delete</button>
			</form>
			</div><a asp-controller="Movies" asp-action="Index">Back to List</a>
			</div>
			</div>