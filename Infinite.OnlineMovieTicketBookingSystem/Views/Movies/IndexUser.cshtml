@model IEnumerable<MovieViewModel>
@{
    ViewData["Title"] = "IndexUser";
}

<h1>IndexUser</h1>

<div class="row">
    <div class="col-md-7">
        <div class="row">
            <div class="col">
                <h2>List of Movies</h2>
            </div>
           
        </div>
        <div class="row">
            <table class="table table-hover">
                <thead>
                    <tr>
                        @*                        <th>Movie Id</th>
                        *@
                        <th>Movie Name</th>
                        <th>Genre name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            @*                            <td>@item.Id</td>
                        *@
                            <td>@item.MovieName</td>
                            <td>@item.GenreName</td>

                            <td>
                                <a asp-controller="Movies" asp-action="Details" asp-route-id="@item.Id">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
